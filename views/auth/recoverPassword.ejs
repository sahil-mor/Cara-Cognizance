<%- include('../partials/loaders') %> 
<body class="hold-transition login-page" style="background-image: url(/images/background.jpg); background-position: center;
background-repeat: no-repeat;
background-size: cover;">
	<div class="container h-p100">
		<div class="row align-items-center justify-content-md-center h-p100">
			<div class="col-lg-4 col-md-8 col-12">
				<div class="login-box bg-img rounded" style="background-image:url(/images/img1.jpg);" data-overlay="5">
				  <div class="login-box-body pb-20">
					<p class="login-box-msg text-uppercase">Recover password</p>
					<form action="/forgotPassword" method="POST" class="form-element text-white">
						<div class="form-group has-feedback">
							<input type="email" required class="form-control text-white" name="email" placeholder="Email Address" >
							<span class="ion ion-email form-control-feedback text-white"></span>
						 </div>     
						 <div class="text-centre col-12">
							<div class="text-center">
							  <% if(error && error.length > 0){ %>
								<div class="alert alert-danger">
									<%= error %> 
								</div>
							  <% } %>
						  
							  <% if(success && success.length > 0){ %>
								<div class="alert alert-success">
									<%= success %>
								</div>
							  <% } %>
							</div>
						</div> 
						<div class="row">
							<div class="col-12 text-center">
								<button type="submit" class="btn btn-info btn-block text-uppercase">Reset</button>
							</div>
						</div>
						<div class="text-center margin-top-20" >
							Or <a href="/" class="text-danger"><b>Sign In</b></a> as a Different User
						</div>
					</form>

				  </div>
				</div>
			
			</div>
		</div>
	</div>

	<%- include('./partials/scripts') %> 
</body>

</html>
