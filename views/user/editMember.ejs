<%- include('../partials/loaders') %> 
<body class="hold-transition skin-purple light-sidebar sidebar-mini">
<div class="wrapper">

  <section class="mainsite" id="mainsite">
	<%- include('../partials/sidenav') %> 
	<section class="mainpage" id="mainpage">
	  <div class="burger" id="burger">
		  <div class="burger-menu"></div>
	  </div>
	<div style="height: 100vh;background: #f1f2f7;">
		<%- include('../partials/flashMessage') %> 
		<section class="content-header">
		<h1>
			Edit Data
		</h1>
		</section>
		<section class="content">
			<div class="row">
				<div class="col-12">     
					<div class="box box-default">
						<div class="box-body">
							<form enctype="multipart/form-data" action="/editMember-<%=userItem.id%>" method="POST" >						
								<div id="example-basic">
									<h3>Edit Info</h3>
									<section>
										<div class="row">
											<div class="col-md-12">
												<div class="from-group">
													<label>Select Image</label>
													<input type="file" value="<%=userItem.image.imageUrl%>" required name="uri" accept="image/x-png,image/gif,image/jpeg" class="form-group form-control">
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												<div class="form-group">
													<button type="submit" class="form-group btn btn-dark">Submit</button>
												</div>
											</div>
										</div>
									</section>
								</div>
							</form>
							<form  action="/editMember-<%=userItem.id%>" method="POST" >
								<div id="example-basic">
									<section>         
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label for="name">Name :</label>
													<input type="text" placeholder="Name" value="<%=userItem.name%>" required class="form-control" name="name" id="name"> 
												</div>
											</div>

											<div class="col-md-6">
												<div class="form-group">
													<label for="phoneNumber1">Phone Number :</label>
													<input type="tel" placeholder="Phone Number" value="<%=userItem.phoneNumber%>" required value="<%=user.phoneNumber%>" class="form-control" name="phoneNumber" id="phoneNumber1"> 
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label for="date1">Date of Birth :</label>
													<input type="date" required class="form-control"value="<%=userItem.dateOfBirth%>" name="dateOfBirth" id="date1"> 
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label for="address">Email :</label>
													<input type="text" placeholder="Email" required value="<%=userItem.email%>" class="form-control" name="email" id="address"> 
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												<div class="form-group">
													<label for="address">Address :</label>
													<input type="text" placeholder="Address" required value="<%=userItem.address%>" class="form-control" name="address" id="address"> 
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												<div class="form-group">
													<button type="submit" class="form-group btn btn-info">Submit</button>
												</div>
											</div>
										</div>
									</section>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
	  </div>
	</section>
  </section>
  
</div>
	
  <%- include('../partials/footer') %> 
</body>

</html>
